<%= form_with model: [:admin, @category], local: true, html: { multipart: true } do |form| %>
  <div>
    <%= form.label :name %>
    <br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <br>
    <%= form.text_area :description, rows: 4 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>