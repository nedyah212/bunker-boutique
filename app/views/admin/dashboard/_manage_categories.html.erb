<div class="sub-title">
  <p>Categories</p>
  <%= link_to "Add New Category", new_admin_category_path, class: "btn btn-primary mb-3" %>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <a href="<%= edit_admin_category_path(category) %>">Edit</a>
          <a href="<%= admin_category_path(category) %>" data-turbo-method="delete"
          class="<%= 'disabled' if category.products.any? %>">Delete</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination">
  <%= paginate @categories, param_name: :categories_page %>
</div>