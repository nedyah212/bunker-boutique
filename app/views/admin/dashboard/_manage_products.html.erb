<%= link_to "Add New Product", new_admin_product_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.quantity_in_stock %></td>
        <td>
          <%= button_to "Delete",
              admin_product_path(product),
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this product?" },
              class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>